@using BookStore.Models;
@model IEnumerable<BookResult>
@{
    ViewBag.Title = "BookResult";
}

<h2>BookResult</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ISBN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            Year Published
        </th>
        <th>
            Number of Pages
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Language)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Edition)
        </th>
        <th>
            Cover Type
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Inventory)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>
        <th>
            Publisher
        </th>
        <th></th>
    </tr>

    @foreach (var item in ViewBag.list)
    {
        <tr>
            <td>
                @Html.DisplayFor(item => item.ISBN)
            </td>
            <td>
                @Html.DisplayFor(item => item.Title)
            </td>
            <td>
                @Html.DisplayFor(item => item.PublishYear)
            </td>
            <td>
                @Html.DisplayFor(item => item.PageNum)
            </td>
            <td>
                @Html.DisplayFor(item => item.Language)
            </td>
            <td>
                @Html.DisplayFor(item => item.Edition)
            </td>
            <td>
                @Html.DisplayFor(item => item.CoverType)
            </td>
            <td>
                @Html.DisplayFor(item => item.Inventory)
            </td>
            <td>
                @Html.DisplayFor(item => item.Cost)
            </td>

        </tr>
        
    }

</table>
